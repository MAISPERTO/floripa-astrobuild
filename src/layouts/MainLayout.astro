---
// src/layouts/MainLayout.astro (Vers칚o FINAL com Logotipo "Floripa.MP | Neg칩cios Locais" ajustado)
export interface Props {
  title: string;
  description: string;
  adsenseClient: string;
  siteName: string; // 游릭 Necess치rio
  siteTagline: string; // 游릭 Necess치rio
}

const { title, description, adsenseClient, siteName, siteTagline } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />

    <script
      async
      src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${adsenseClient}`}
      crossorigin="anonymous">
    </script>

    <style>
      /* Estilos gerais */
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; 
        margin: 0; 
        padding: 2rem; 
        background: #f5f5f7;
      }
      main {
        max-width: 960px;
        margin: 0 auto;
      }
      /* 游릭 Estilos da Logo e Cabe칞alho (NOVOS) */
      .site-logo-container {
        display: flex; 
        align-items: baseline;
        padding-top: 0.5rem;
        padding-bottom: 0.75rem; 
      }
      .site-logo-container h1 {
        font-size: 1.8rem; /* Fonte menor */
        color: #1c1c1e;
        margin: 0; 
      }
      .logo-tagline {
        /* Cor mais suave e barra reta */
        margin-left: 0.6rem;
        font-size: 0.9rem; 
        color: #888; /* Cinza suave */
        font-weight: 500;
        line-height: 1.8rem; 
      }
      .site-hr {
        border: none; 
        border-top: 1px solid #ddd; 
        margin: 0; /* Linha divis칩ria colada no logo */
      }
    </style>

  </head>
  <body>
    <main>
      
      <header>
        <div class="site-logo-container">
          <h1>
            {siteName} 
          </h1>
          {/* Adi칞칚o da barra e tagline */}
          <span class="logo-tagline">
            | {siteTagline} 
          </span>
        </div>
        <hr class="site-hr" />
      </header>

      <slot />
    </main>
  </body>
</html>