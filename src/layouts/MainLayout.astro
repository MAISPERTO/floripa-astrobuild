---
// src/layouts/MainLayout.astro
export interface Props {
  title: string;
  description: string;
  adsenseClient: string;
}

const { title, description, adsenseClient } = Astro.props;
---

<!doctype html>
<html lang="pt-BR">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>{title}</title>
    <meta name="description" content={description} />

    {/* Script principal do Adsense (carregado uma vez por página) */}
    {/* Este script deve ser carregado no head para melhor performance */}
    <script
      async
      src={`https://pagead2.googlesyndication.com/pagead/js/adsbygoogle.js?client=${adsenseClient}`}
      crossorigin="anonymous">
    </script>
    
    {/* AQUI ESTAVAM TODOS OS ESTILOS CSS. Idealmente, mova-os para um arquivo CSS. */}
    {/* Por enquanto, vamos manter os estilos inline ou movê-los para o CardSection */}
    <style>
      /* Estilos gerais removidos do [...slug].astro e index.astro */
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif; 
        margin: 0; 
        padding: 2rem; 
        background: #f5f5f7;
      }
      main {
        max-width: 960px; 
        margin: 0 auto;
      }
    </style>

  </head>
  <body>
    <main>
      <slot />
    </main>
  </body>
</html>